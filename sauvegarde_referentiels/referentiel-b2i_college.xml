    <poids_item>1</poids_item>
    <empreinte_item>1</empreinte_item>
    <num_item>5</num_item>
   </item>

   <item>
    <code>Col1.6</code>
    <description_item>
<text>1.6) Je sais faire un autre choix que celui proposé par défaut (lieu d'enregistrement, format, imprimante).</text>
</description_item>
    <type_item></type_item>
    <poids_item>1</poids_item>
    <empreinte_item>1</empreinte_item>
    <num_item>6</num_item>
   </item>

